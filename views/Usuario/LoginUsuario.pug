extends ../layout

block head
  link(rel="stylesheet", href="/css/Login.css")

block content
  .login-wrapper
    .login-card
      .login-header
        img(src="/img/new-logo.png", alt="Hospital San Vital")
        h1 Iniciar Sesión
      
      if mensajeError
        div.error-msg
          | #{mensajeError}

      form(method="POST", action="/usuarios/login")
        .form-group
          label(for="credencial") Email o Usuario:
          input(type="text", name="credencial", id="credencial", required, placeholder="Ej: medico@hospital.com", autocomplete="username")
        
        .form-group
          label(for="password") Contraseña:
          input(type="password", name="password", id="password", required, placeholder="Ingrese su contraseña", autocomplete="current-password")
        
        div
          button.btn-login(type="submit") Ingresar al Sistema