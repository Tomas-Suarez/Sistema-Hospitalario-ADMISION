block content
  h1 Iniciar Sesión
  if mensajeError
    p(style="color:red")= mensajeError

  form(method="POST", action="/usuarios/login")
    div
      label(for="credencial") Email o Usuario:
      input(type="text", name="credencial", required)
    div
      label(for="password") Contraseña:
      input(type="password", name="password", required)
    div
      button(type="submit") Ingresar